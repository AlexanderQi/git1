<UserControl x:Class="sc_dbmgr_v1.uiDbbackup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sc_dbmgr_v1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="146*"/>
        </Grid.RowDefinitions>
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Stretch" Height="10" Margin="130,0,130,0" Grid.Row="2" Grid.RowSpan="1" Background="#FFD6FFA9"/>
        <ListBox x:Name="listBox" Margin="0" Grid.Row="1"/>
        <TextBox x:Name="textBox" Margin="0" Grid.Row="3" TextWrapping="Wrap"/>
        <ComboBox x:Name="comboBox" Margin="10,0,110,0" VerticalAlignment="Top" Height="22"/>
        <Button x:Name="button_connect" Content="连接" HorizontalAlignment="Right" Margin="0,0,60,0" VerticalAlignment="Top" Width="45"/>
        <Button x:Name="button_backup" Content="备份" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Top" Width="45"/>

    </Grid>
</UserControl>
